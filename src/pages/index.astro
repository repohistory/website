---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import { Image } from 'astro:assets';
import demoImage from '../images/demo.png';
---

<Layout title="Repohistory">
	<NavBar />
	<main>
		<div class="flex flex-col items-center gap-4 px-5">
			<h1 class="pt-20 text-center text-6xl font-bold leading-tight text-white sm:pt-36 md:text-7xl">
			<div>Effortless Tracking</div>
				<div class="text-[#62C3F8]">Timeless Insights</div>
			</h1>
			<h2 class="my-5 max-w-3xl text-center text-base text-white md:text-xl">
				Repohistory is a GitHub repository traffic history tracker that keeps
				records beyond the standard 14 days, offering an easy and detailed
				long-term view.
			</h2>
			<a
				class="w-32 h-12 bg-[#62C3F8] flex items-center justify-center rounded-md text-black font-medium transition"
				href="https://app.repohistory.com/login"
				>
				Get Started
			</a>
			<Image
				class="mx-auto w-[90%] my-10 border border-[#202225]"
				alt="screenshot of repohistory"
				src={demoImage}
			/>
		</div>
	</main>
</Layout>
